<footer class="footer" id="contact">
    <div class="footer-container">
        <div class="footer-brand">
            <h3 class="footer-logo">{{ shop.name }}</h3>
            <p class="footer-tagline">Streetwear made for your vibe.</p>
            <div class="social-links">
                <!-- Social links could also be dynamic settings, simplifying for now -->
                <a href="#" class="social-icon" aria-label="X/Twitter">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
                    </svg>
                </a>
            </div>
        </div>

        <div class="footer-links">
            <div class="footer-column">
                <h4>{{ section.settings.menu_title }}</h4>
                <ul>
                    {% for link in linklists[section.settings.menu].links %}
                        <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                    {% endfor %}
                </ul>
            </div>
            
            <div class="footer-column">
                <h4>Contact us</h4>
                <ul class="contact-list">
                    <li>
                        <span class="contact-icon">✉</span>
                        <a href="mailto:{{ shop.email }}">{{ shop.email }}</a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="footer-bottom">
            <p>© {{ 'now' | date: "%Y" }} {{ shop.name }}. All rights reserved.</p>
        </div>
    </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
        "type": "text",
        "id": "menu_title",
        "label": "Menu Title",
        "default": "Navigation"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Footer Menu",
      "default": "footer"
    }
  ]
}
{% endschema %}

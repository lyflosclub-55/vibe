<section class="shop-section cart-page">
  <div class="section-header-row cart-page-header">
    <h1 class="section-title-script">Your Cart</h1>
  </div>

  <div class="cart-container">
    {% if cart.item_count > 0 %}
      <form action="{{ routes.cart_url }}" method="post" novalidate>
        <div class="cart-items">
          {% for item in cart.items %}
            <div class="cart-item hero-card"> <!-- Added hero-card for tilt effect -->
              <div class="cart-item-image">
                {% if item.image %}
                  <img src="{{ item.image | image_url: width: 200 }}" alt="{{ item.title | escape }}">
                {% endif %}
              </div>
              <div class="cart-item-details">
                <h4>{{ item.product.title }}</h4>
                {% unless item.product.has_only_default_variant %}
                  <p class="cart-variant">{{ item.variant.title }}</p>
                {% endunless %}
                <p class="cart-price">{{ item.final_price | money }}</p>
                
                <div class="cart-qty">
                  <input type="number" name="updates[]" value="{{ item.quantity }}" min="0">
                  <a href="{{ item.url_to_remove }}" class="cart-remove">Remove</a>
                </div>
              </div>
              <div class="cart-item-total">
                <strong>{{ item.final_line_price | money }}</strong>
              </div>
            </div>
          {% endfor %}
        </div>

        <div class="cart-footer">
          <div class="cart-subtotal">
            <span>Subtotal: </span>
            <span>{{ cart.total_price | money }}</span>
          </div>
          
          <div class="cart-actions">
            <button type="submit" name="update" class="collection-btn cart-update-btn">Update Cart</button>
            <button type="submit" name="checkout" class="btn-primary">Checkout</button>
          </div>
        </div>
      </form>
    {% else %}
      <div class="cart-empty">
        <h2>Your cart is empty</h2>
        <a href="{{ routes.all_products_collection_url }}" class="btn-primary">Continue Shopping</a>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Cart Page",
  "settings": []
}
{% endschema %}

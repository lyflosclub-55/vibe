<section class="hero" id="home">
    <div class="hero-content">
        <div class="hero-tagline">
            <span class="tagline-italic">Own the</span>
            <span class="tagline-bold">EDGE</span>
            <div class="swoosh-line"></div>
            <span class="tagline-italic right">Keep the</span>
            <span class="tagline-bold right">VIBE</span>
        </div>

        <div class="hero-card">
            <div class="hero-card-content">
                <div class="hero-left">
                    <span class="new-arrivals-badge">{{ section.settings.badge_text }}</span>
                    <h1>{{ section.settings.heading }}</h1>
                    <p>{{ section.settings.subheading }}</p>
                    <a href="{{ section.settings.button_link }}" class="btn-primary new-drops-btn">
                        {{ section.settings.button_label }}
                        <span class="arrow-circle">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <line x1="5" y1="12" x2="19" y2="12"></line>
                                <polyline points="12 5 19 12 12 19"></polyline>
                            </svg>
                        </span>
                    </a>
                </div>
                <div class="hero-center">
                    {% if section.settings.hero_image != blank %}
                        <img src="{{ section.settings.hero_image | image_url: width: 800 }}" 
                             alt="{{ section.settings.hero_image.alt }}"
                             class="hero-model">
                    {% else %}
                        <img src="{{ 'hero_model_1769635407835.png' | asset_url }}" alt="Model" class="hero-model">
                    {% endif %}
                </div>
                <div class="hero-right">
                    <!-- Feature icons can be blocks in a future iteration -->
                    <div class="feature-icons">
                         <div class="feature-icon">
                            <span class="icon-circle coral">âš¡</span>
                            <span class="feature-label">Future<br>Threads</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge Text",
      "default": "New Arrivals"
    },
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading",
      "default": "Where Art Meets<br>your Style"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Step into the future of streetwear today."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "New Drops"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}
